{
  "name": "sistema-autenticacao",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:ts": "tsc",
    "clean": "rimraf dist",
    "copy:assets": "cpx \"src/assets/**/*\" dist/assets",
    "build": "npm run clean && npm run build:ts && npm run copy:assets",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "dev:api": "nodemon --watch src --ext ts --exec node --loader ts-node/esm src/index.ts",
    "dev:email-worker": "nodemon --watch src --ext ts --exec node --loader ts-node/esm --env-file=.env src/workers/email-confirmation-worker.ts",
    "dev": "concurrently -k -n \"api,email-worker\" -c \"blue,green\" \"npm run dev:api\" \"npm run dev:email-worker\"",
    "prisma:migrate-dev": "prisma migrate dev",
    "node-ts": "node --loader ts-node/esm --env-file=.env"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@jest/globals": "^30.0.0-beta.3",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.24",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.0",
    "cpx": "^1.5.0",
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "3.5.3",
    "prisma": "^6.8.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "argon2": "^0.43.0",
    "bullmq": "^5.53.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mailtrap": "^4.1.0",
